/* -*- mode: css; -*- */

* {

  white:        #fff;
  white-dim:    #ccc;
  red:          #c00;
  yellow:       #fc0;
  green:        #0c0;
  cyan:         #0cc;
  blue:         #00c;
  magenta:      #0cc;

  urgent:       #f30;

  blue-dim:     #36c;
  blue-bright:  #39f;
  blue-med:     #248;

  green-dim:    #0c0;
  green-bright: #0f0;

  red-dim:      #c00;

  text-dim:     @white-dim;
  text-bright:  @white;

  bg-dim:       #000c;

  spacing: 0;
  background-color: transparent;

  /*font: "Sans 14";*/
  /*font: "Roboto Mono Bold 14";*/
  text-color: @text-bright;
}

inputbar {
  border-color: @blue-dim;
  border: 3px;
  border-radius: 12px;
  background-color: @bg-dim;
  padding: 9px 24px;
  margin: 0px 0px 25px 0px;
  children: [prompt, textbox-prompt-colon, entry, case-indicator];
}

prompt {
  text-color: @blue-bright;
}

textbox-prompt-colon {
  expand: false;
  str: ":";
  text-color: @blue-bright;
}

entry {
  margin: 0px 0.5em;
}

listview {
  border-color: @blue-dim;
  border: 3px;
  border-radius: 12px;
  background-color: @bg-dim;
  padding: 9px;
  spacing: 3px;
  dynamic: true;
  scrollbar: true;
}

scrollbar {
  handle-color: @blue-dim;
  handle-width: 3px;
  padding: 0px;
  margin: 0px 0px 0px 9px;
}

element {
  padding: 3px 24px;
  text-color: @text-dim;
  border-radius: 6px;
}

element selected {
  background-color: @blue-med;
  text-color: @text-bright;
}

element urgent, element selected urgent {
  text-color: @urgent;
}

message {
  transparency: "real";
  fullscreen: true;
  padding: 10px 20px;
  border-radius: 12px;
  background-color: @bg-dim;
  border: 3px;
  border-color: @blue-dim;
}

error-message {
    background-color: @bg-dim;
    padding: 12px;
    border-radius: 12px;
    border: 3px;
    border-color: @red-dim;
}

button selected {
  padding: 9px;
  border-radius: 3px;
  background-color: @blue-med;
}

sidebar {
  border-radius: 6px;
  background-color: @bg-dim;
  padding: 9px;
  margin: 10px 0px 0px 0px;
}
