disable r


# LS
alias ls='ls --color=tty --group-directories-first'
alias ll='ls -lh'
alias l='ll -A'
alias la='ll -a'
alias lg='l | grep -i'


# SAFETY
alias cp='cp -i'
alias sucp='sudo cp -i'
alias mv='mv -i'
alias sumv='sudo mv -i'
alias rmm='/bin/rm -i'
alias rm='echo Use either the alias del="trash", the full path "/bin/rm", or the alias rmm="rm -i".'
alias del='trash'
alias surmm='sudo rm -i'
alias sudel='sudo trash'


# PYTHON
alias py2='python2'
alias py3='python3'
alias py='python'

alias supy2='sudo python2'
alias supy3='sudo python3'
alias supy='sudo python'

alias pi2='pip2 install --user'
alias pi3='pip3 install --user'
alias pi='pip install --user'


# MISC
alias aud='audacity'
alias df='df -h' # human-readable sizes
alias du='du -h'
alias dus='du -s'
alias grepi='grep -i'
alias libr='libreoffice'
alias lolcow='cowsay | lolcat -t'
alias lol='lolcat -t'
alias open='xdg-open'
alias pg='ps aux | grep -i'
alias sys='systemctl'
alias susys='sudo systemctl'
alias suno='sudo nano'
alias sutee='sudo tee'
alias diff='colordiff'


# SHORT
alias a='atom'
alias a.='atom .'
alias c='cd'
alias cx='chmod +x'
alias c-x='chmod -x'
alias s='subl -n'
alias s.='subl -n .'
alias jj='java -jar'
alias m='mousepad'
alias n='nano'
alias vn='viewnior'
alias q='exit'
