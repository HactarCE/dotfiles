alias sued='sudoedit'
alias suno='sudo nano'
alias sus='sudo -s'
alias susys='sudo systemctl'
alias sutee='sudo tee'
alias sys='systemctl'
alias xpgc='xprop | grep WM_CLASS'
alias words='rlwrap words'


# SHORT
alias c='cd'
alias cl='clear; ll'
alias cx='chmod +x'
alias c-x='chmod -x'
alias fm='pcmanfm'
alias s='subl -n'
