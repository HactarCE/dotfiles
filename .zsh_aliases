alias diff='colordiff'
alias wdiff="wdiff -n -w $'\033[30;41m' -x $'\033[0m' -y $'\033[30;42m' -z $'\033[0m'"
alias du='du -h'
alias dud='du -d'
alias dus='du -s'
alias grepi='grep -i'
alias libr='libreoffice'
alias lol='lolcat -t'
alias lolcow='cowsay | lol'
alias open='xdg-open'
alias pg='ps aux | grep -i'
alias sorthr='sort -hr'
alias sued='sudoedit'
alias suno='sudo nano'
alias sus='sudo -s'
alias susys='sudo systemctl'
alias sutee='sudo tee'
alias sys='systemctl'
alias xpgc='xprop | grep WM_CLASS'
alias words='rlwrap words'


