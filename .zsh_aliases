disable r


alias subl='subl3'


# LS
alias ls='ls --color=tty --group-directories-first'
alias ll='ls -lhN'
alias l='ll -A'
alias lg='l | grep -i'
alias llt='ll -t'
alias lst='ls -t'
alias lt='l -t'
unalias la
unalias lsa


# SAFETY
alias cp='cp -i'
alias sucp='sudo cp -i'
alias mv='mv -i'
alias sumv='sudo mv -i'
alias rmm='/bin/rm -i'
alias rm='echo Use either the alias del="trash", the full path "/bin/rm", or the alias rmm="rm -i".'
alias del='trash'
alias surmm='sudo rm -i'
alias sudel='sudo trash'


# YADM
alias y='yadm'
alias ya='yadm add'
alias yai='yadm add -i'
alias yco='yadm checkout'
alias yc='yadm commit -v'
alias ycm='yadm commit -vm'
alias yca='yadm commit -v --amend'
alias yd='yadm diff'
alias ydca='yadm diff --cached'
alias yp='yadm push'
alias yl='yadm pull'
alias yru='yadm reset --'
alias yst='yadm status'


# PYTHON
alias py2='python2'
alias py3='python3'
alias py='python'
alias ipy='ipython'

alias supy2='sudo python2'
alias supy3='sudo python3'
alias supy='sudo python'

alias pi2='pip2 install --user'
alias pi3='pip3 install --user'
alias pi='pip install --user'


